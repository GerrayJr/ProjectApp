<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BeforeMAp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="62dp"
        android:text="How To Use: "
        android:textSize="19sp"
        android:id="@+id/header"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/header"
        android:layout_marginTop="126dp"
        android:layout_marginRight="20dp"
        android:text="On Clicking the button Below, you will enter a map" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/header"
        android:layout_marginTop="170dp"
        android:layout_toEndOf="@+id/camera"
        android:layout_marginRight="20dp"
        android:text="The Map is Set Default to Your Location" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/header"
        android:layout_marginTop="210dp"
        android:layout_marginRight="20dp"
        android:text="Below are uses of the Icons on the Map:" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/header"
        android:layout_marginTop="250dp"
        android:id="@+id/camera"
        android:src="@drawable/ic_gps" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/camera"
        android:layout_marginEnd="70dp"
        android:layout_marginRight="20dp"
        android:id="@+id/gpsInfo"
        android:text="Click to return view to your Location"
        android:textStyle="italic" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/header"
        android:layout_marginTop="300dp"
        android:id="@+id/car"
        android:src="@drawable/ic_car_parking" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/gpsInfo"
        android:layout_alignTop="@+id/car"
        android:layout_marginRight="20dp"
        android:text="Click to Search For car parks Around"
        android:textStyle="italic" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="360dp"
        android:layout_alignStart="@+id/header"
        android:layout_marginRight="20dp"
        android:id="@+id/searchInfo"
        android:text="A Search bar is Available for Search for Locations you Intend to get parking" />


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/header"
        android:layout_marginBottom="333dp"
        android:layout_below="@+id/searchInfo"
        android:layout_marginRight="20dp"
        android:layout_marginTop="20dp"
        android:text="On Clicking the Park slot Marker, Navigation and Location Icons appear to help you navigate to the Location." />

    <Button
        android:id="@+id/btnMap"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="15dp"
        android:layout_marginEnd="22dp"
        android:background="@drawable/button_style"
        android:text="Begin"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginRight="20dp"/>

</RelativeLayout>